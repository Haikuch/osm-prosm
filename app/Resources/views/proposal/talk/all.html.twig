{% extends 'proposal/talk/talk.html.twig' %}

{% block channel %}

    <div class="forum">
        
        {% for post in posts %}

            <div class="thread">
                            
                <div class="postmeta">
                    {{ post.channel }} <b>{{ post.userName }}</b> - <i>{{ post.createdTime|date('H:i, d.m.Y') }}</i>
                </div>
                <div class="content">
                    {{ post.content|raw }}
                    | 
                </div>
            
            </div>

        {% endfor %}
        
    </div>

{% endblock %}



{% block stylesheets %}
    
    {{ parent() }}
    
    {% stylesheets filter="sass"
        "css/proposal/talk/forum.scss"
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block active_all %}
    active
{% endblock %}
 